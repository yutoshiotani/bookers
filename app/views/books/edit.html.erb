<body>
<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <label for="book_body">Body</label>
    
    <%= f.text_area :body %>
  </div>
  
  <%= f.submit 'Update Book' %>
 
  
<% end %>

<%= link_to "Show", book_path(@book.id) %>|
<a class="back" href="/books">Back</a>

</body>